<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders"> 
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>OrderId - # <%= order._id %> </h1> <h3> <a href="/orders/<%=order._id%>">Download(.pdf)</a>
                            
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> | Quantity :  <%= p.quantity %> </li>
                                <% }); %>
                            </ul>
                        </li>   
                    <% }); %>   
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>